{
    "app-id" : "io.github.lainsce.EmulsionDevel",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "master",
    "sdk" : "org.gnome.Sdk",
    "command" : "io.github.lainsce.Emulsion",
    "rename-icon" : "io.github.lainsce.EmulsionDevel",
    "finish-args" : [
        "--filesystem=xdg-run/gvfsd",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--socket=session-bus",
        "--share=ipc",
        "--device=dri"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name": "libportal",
            "buildsystem": "meson",
            "builddir": true,
            "config-opts": [
              "-Dgtk_doc=false",
              "-Dbackends=gtk4"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/flatpak/libportal"
                }
            ]
        },
        {
            "name" : "emulsion",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "../../",
		    "branch": "main"
                }
            ]
        }
    ]
}
